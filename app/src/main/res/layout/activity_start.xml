<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <Button
        android:id="@+id/buttonFacile"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:onClick="startFacile"
        android:text="Facile"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMoyen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMoyen"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:onClick="startMoyen"
        android:text="Moyen"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDifficile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFacile" />

    <Button
        android:id="@+id/buttonDifficile"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:onClick="startDifficile"
        android:text="Difficile"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMoyen" />

    <TextView
        android:id="@+id/textDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:text="Selectionnez la difficultÃ©e :"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFacile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>